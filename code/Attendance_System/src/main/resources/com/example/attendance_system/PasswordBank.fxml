<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.attendance_system.PasswordBankController">
    <GridPane hgap="10" vgap="10">
        <Label text="Password Bank" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <Button text="Add Password" onAction="#addContainer" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <VBox fx:id="containers" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <Button text="Submit" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    </GridPane>
</ScrollPane>
